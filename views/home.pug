extends ./templates/main.pug
include ./mixins/contentCard

block content
  .home
    .content-cards 
      each item in content
        +contentCard({
          creator: {
            profileUrl: item.creator.profileUrl,
            displayName: item.creator.displayName,
            id: item.creator.id,
          },
          fileUrl: item.fileUrl,
          description: item.description,
        })